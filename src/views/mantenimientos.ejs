<% include partials/_header %>

<div class="container mt-5">
    
    <div class="table-responsive">
    
      <table class="table table-bordered table-hover" id="ta" style="font-size: 13px;" >
            
        <thead>
          <tr class="table-primary "  >
            <td>SERIE</td>
            <td>MODELO</td>
            <td>PROVEDOR</td>
            <td>VIDA UTIL (AÃ‘OS)</td>
            <td>TIPO DE CAMARA</td>
            <td>RESOLUCION</td>
            
            <td>FECHA DE SOLICTUD</td>
            <td>TIPO DE MANTENIMIENTO</td>
            
                
            
          </tr>
        </thead>
        
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].n_serie %></td>
                <td><%= data[i].nombre_modelo %></td>
                <td><%= data[i].nombre_provedor %></td>
                <td><%= data[i].vida_util %></td>
                <td><%= data[i].tipo_camara %></td>
                <td><%= data[i].name_resolucion %></td>
                
                <td><%= data[i].fecha_solicitud.toISOString().substring(0,10) %></td>
                <td><%= data[i].tipo_mantenimiento  %></td>
                
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  
  

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js">

</script>

