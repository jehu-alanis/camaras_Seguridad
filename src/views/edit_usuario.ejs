<% include partials/_header %>

<div class="container mt-7">
  <div class="col-md-16">

          <form action="/updateusuario/<%= data.id_personal %>"  name=formulario method="POST">
  
          <div class="row">
            
                  <table class="table table-bordered table-hover">
                  
                          <tbody>
                
                          <tr class="table-primary">
                              <th scope="col " >PERSONAL</th>
                              
                        </tr>
                              
                                    <tr> 
                                         
                                      <td>NOMBRE: <div class="form-group"><input type="text" name="nombre" value="<%= data.nombre%>" class="form-control" required></div></td>
                                      <td>APP PATERNO: <div class="form-group"><input type="text"  name="ap_paterno" value="<%= data.ap_paterno%>" class="form-control"required></div></td>
                                      <td>APP MATERNO: <div class="form-group"><input type="text"  name="ap_materno" value="<%= data.ap_materno%>" class="form-control"required></div></td>
                                          
  
                                    </tr>
                                    <tr> 

                                        <td>CLAVE: <div class="form-group"><input type="text" name="clave_personal" value="<%= data.clave_personal%>" class="form-control"required></div></td>
                                               
                                        <td>TIPO DE USUARIO:  <div class="form-group">
                                            <select class="  mul-select custom-select " name="id_cat_usuario">
                                                                                         
                                                     <% for(var i = 0; i < usuario.length; i++) { %> 
                                                             <option value="<%=usuario[i].id_usuario %>"><%=usuario[i].tipo_usuario %></option>
                                                             <% } %>  
                                                                       
                                             </select> </div> </td>
                                          
                                         
                                      </tr>
                                    
              
                                  </tbody>
                                  </table>
      
                                  
                                  <button type="submit" class="btn btn-success ml-auto btn-sm"><i class='far fa-save' style='font-size:24px'></i> GUARDAR</button>
                                  <a href="/personal" class="btn btn-danger btn-sm "><i class='fas fa-reply' style='font-size:24px'></i> CANCELAR</a>
                                  
  </form>
  </div>
  </div>


<% include partials/_footer %>
       
<script>
    $(document).ready(function(){
        $(".mul-select").select2({
                placeholder: "selecciona" //placeholder
                
            });
        })
</script>

