
<% include partials/_header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered table-hover" id="ta">
        <thead>
          <tr>
            
            <td>CIUDAD</td>
            <td>ACCIONES</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].nombre_ciudad %></td>
               
                <td>
                        <a href="/updateciudad/<%= data[i].id_ciudades %>" class="btn btn-info btn-sm" ><i class='fas fa-edit' style='font-size:15px'></i></a>
                  
                        <a href="/deleteciudad/<%= data[i].id_ciudades %>" class="btn btn-danger btn-sm"  onclick = "if (confirm('Â¿ESTA SEGURO DE ELIMINAR?')) commentDelete(1); return false"><i class='fas fa-trash-alt' style='font-size:15px'></i></a>
