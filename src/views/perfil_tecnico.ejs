<% include partials/_header_tecnico %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body">
                    <div class="card-title mb-4">
                          
                            <div class="userData ml-3">
                                <h2 class="d-block" style="font-size: 1.5rem; font-weight: bold"><%= user.username %></a></h2>
                                
                            </div>
                            <div class="container">
                                <div class="btn-block float-right">
                                    
                                    <a href="/updateperfil_te/<%= data.id_personal %>" class="btn btn-warning float-right btn-sm" ><i class='fas fa-edit' style='font-size:25px'></i> Editar</a>
                                     
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                                <li class="nav-item">
