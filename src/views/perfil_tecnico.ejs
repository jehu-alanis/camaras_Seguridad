                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Clave de personal</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            <%= data.clave_personal%>
                                        </div>
                                    </div>
                                    <hr />
                                    
                                    
                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Tipo de usuario</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            <%= data.tipo_usuario%>
                                        </div>
                                    </div>
                                    <hr />
