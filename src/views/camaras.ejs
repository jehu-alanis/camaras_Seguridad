<% include partials/_header %>
<div class="container mt-7">
    <div class="table-responsive">
       
    
      <table class="table table-bordered table-hover" id="ta" style="font-size: 11px;" >
            
        <thead>
          <tr class="table-primary "  >
            <td>SERIE</td>
            <td>MODELO</td>
            <td>PROVEDOR</td>
            <td>VIDA UTIL</td>
            <td>TIPO DE CAMARA</td>
            <td>RESOLUCION</td>
            <td>DESCRIPCION</td>
            <td>ACCIONES</td>
            <td>REPORTAR</td>
            
                
            
          </tr>
        </thead>
        
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>
                <td><%= data[i].n_serie %></td>
                <td><%= data[i].nombre_modelo %></td>
                <td><%= data[i].nombre_provedor %></td>
                <td><%= data[i].vida_util %></td>
                <td><%= data[i].tipo_camara %></td>
                <td><%= data[i].name_resolucion %></td>
                <td><%= data[i].descripcion  %></td>
                
                
                <td>
                  <a href="/updatecam/<%= data[i].id_camara %>" class="btn btn-info btn-sm" ><i class='fas fa-edit' style='font-size:15px'></i></a>
                  
                  <a href="/deletecam/<%= data[i].id_camara %>" class="btn btn-danger btn-sm"  onclick = "if (confirm('Â¿ESTA SEGURO DE ELIMINAR ESTA CAMARA?')) commentDelete(1); return false"><i class='fas fa-trash-alt' style='font-size:19px'></i></a>
                </td>
                <td><a href="/reporte/<%= data[i].id_camara %>" class="btn btn-warning btn-sm "  title="Crear un reporte a esta camara."><i class='far fa-file' style='font-size:19px'></i></a></td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js">

</script>

