<% include partials/_header %>


<div class="container mt-7">
        <div class="col-md-16">
    
                <form action="/reporte"  name=formulario method="POST">
          <p style="text-align: center;"><h5>NUEVO REPORTE</h5></p>
                <div class="row">
                  
                        <table class="table table-bordered table-hover">
                        
                                <tbody>
                      
                                <tr class="table-primary">
                                    <th scope="col " >CAMARA</th>
                                    
                              </tr>
                                    
                                          <tr> 
                                                  <td>FECHA SOLICITUD: <div class="form-group"><input type="date"  id="date" value="" name="fecha_solicitud"  class="form-control" required readonly></div></td>
                                                  <td>HORA DE SOLICITUD: <div class="form-group"><input type="time" name="hora_solicitud" id="ora" value=""   class="form-control"required readonly ></div></td>
                                                  
                                                  <td>FECHA DE MANTENIMIENTO:<div class="form-group"><input type="date" id="fechaReserva" name="fecha_de_mantenimiento"  class="form-control"required></div></td>
                                                 
                                                  
                                          </tr>
                                               
                            
                                    
                                    
                                          <tr> 
                                                        <input type="hidden" name="id_camara"  value="<%= data.id_camara%>" class="form-control">
                                                  <td>CAMARA: <div class="form-group"><input type="text" value="<%= data.n_serie%>"   class="form-control"required readonly></div></td>
                                                  <input type="hidden" name="id_personal" value="<%= user.id %>"  class="form-control">
                                                  <td colspan="2">TIPO MANTENIMIENTO:  
                                                  <div class="form-group">
                                                        <select class="custom-select" name="id_tipo_mantenimiento" >
                                                          
                                                          <option value="1">PREVENTIVO</option>
                                                          <option value="2">CORECTIVO</option>
                                                         
                                                          
                                                        </select>
                                                      </div> 
                                          </tr>
                                          <tr>
                                          <td colspan="2"><div><label for="exampleTextarea">OBSERVACIONES:</label> <textarea class="form-control" id="exampleTextarea" name="observaciones" rows="3"></textarea> </div></td>
                                         
                                        </tr>
                                        </tbody>
                                        </table>
            
                                       
                                  <button type="submit" class="btn btn-success ml-auto btn-sm"><i class='far fa-save' style='font-size:24px'></i> GUARDAR</button>
                                  <a href="/camaras" class="btn btn-danger btn-sm "><i class='fas fa-reply' style='font-size:24px'></i> CANCELAR</a>
            </div>
        </form>
            </div>
        </div>





        <script>
window.onload = function(){
  var fecha = new Date(); //Fecha actual
  var mes = fecha.getMonth()+1; //obteniendo mes
  var dia = fecha.getDate(); //obteniendo dia
  var ano = fecha.getFullYear(); //obteniendo año
  if(dia<10)
    dia='0'+dia; //agrega cero si el menor de 10
  if(mes<10)
    mes='0'+mes //agrega cero si el menor de 10
  document.getElementById('date').value=ano+"-"+mes+"-"+dia;
  document.getElementById("fechaReserva").min=ano+"-"+mes+"-"+dia;
                var hora = fecha.getHours(); //obteniendo mes
                var minutos = fecha.getMinutes(); //obteniendo dia
                var segundos = fecha.getSeconds(); //obteniendo año
if(hora<12)
    hora='0'+hora; //agrega cero si el menor de 10
  if(minutos<10)
  minutos='0'+minutos //agrega cero si el menor de 10 
  if(segundos<10)
  segundos='0'+segundos //agrega cero si el menor de 10             
 document.getElementById('ora').value=hora+":"+minutos;

}
</script>



